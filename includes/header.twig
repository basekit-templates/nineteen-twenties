<div class="template-border-top"></div>
<!-- Template Widgets -->

   {% if plugins.ecommerce.store.live %}
      <div class="header-basket">
          {{widget('ecombasket', 'shopbasket', {})|raw}}
      </div>
    {% endif %}

<div class="template-header">
    <div class="flex-container-1">
        <div class="brand template-header__flex-item flex-container-1__item-1">
            {{widget('logo', 'logo', {"defaultlogo": asset('images/logo.png')})|raw}}
            {{widget('companyname', 'companyname', {"business": "profile"})|raw}}
        </div>

        <div class="template-header__flex-item flex-container-1__item-2">

            <div class="flex-container-2">

                <div class="template-header__flex-item flex-container-2__item-a">
                    {{widget('profile', 'socialicons', { 'profileType':'socialicons', 'socialicons':'profile'})|raw}}
                </div>

                <div class="template-header__flex-item flex-container-2__item-b">
                    <div class="extendednavigation-line"></div>
                        {{widget('extendednavigation', 'navigation', {"align":"right"})|raw}}
                </div>

            </div>

        </div>

    </div>

</div>
